#!/bin/sh
#
# MENU
# ====
#
# Displays a simple menu from which you can choose which program
# you want to run.
#
#
# Licensed under the GNU General Public License, version 2 or later.
#
# This program comes with ABSOLUTLY NO WARRANTY. See the GNU GPL for details:
# <https://www.gnu.org/licenses/old-licenses/gpl-2.0.html>
#
#
# Written by Gert Hulselmans and Explorer.
# Last updated on 12 April 2013.

if [ "X$1" = "X--help" ]; then
    # Displays a simple help. Needed by 'helpinfo'.
    cat << HELP

                                 ********
                                 * Menu *
                                 ********

'menu' displays a simple menu from which you can choose which program you want
to run.

Running 'menu' with no command-line options displays the menu. Running with
'--help' displays this message.
HELP
    exit 0
fi

printf "\n"
printf "                                 \033[0;32m********\n"
printf "                                 * Menu *\n"
printf "                                 ********\n"
printf "\n"
printf "                     \033[01;37m1)\033[0m CPU Burn-in v1.00       (cpuburn)\n"
printf "                     \033[01;37m2)\033[0m CPUinfo v1.00           (cpuinfo)\n"
printf "                     \033[01;37m3)\033[0m Mersenne Prime v23.9.2  (mprime 23)\n"
printf "                     \033[01;37m4)\033[0m Mersenne Prime v27.9    (mprime 27)\n"
printf "                     \033[01;37m5)\033[0m Stress v1.0.4           (stress)\n"
printf "                     \033[01;37m6)\033[0m CPU stress tester 2.0   (stresscpu2)\n"
printf "                     \033[01;37m7)\033[0m Helpinfo                (helpinfo)\n"
printf "\n"
printf "                     \033[01;37m8)\033[0m Reboot                  (reboot)\n"
printf "                     \033[01;37m9)\033[0m Shutdown                (poweroff)\n"
printf "\n"
printf "                    \033[01;37m10)\033[0m Exit menu\n"
printf "\n"
printf "Choose: "
read CHOICE
printf "\n"

case "$CHOICE" in
    1 | "cpuburn")
        cpuburn
        ;;
    2 | "cpuinfo")
        cpuinfo
        ;;
    3 | "mprime23" | "mprime 23")
        mprime 23
        ;;
    4 | "mprime27" | "mprime 27")
        mprime 27
        ;;
    5 | "stress")
        stress
        ;;
    6 | "stresscpu2")
        stresscpu2
        ;;
    7 | "help" | "helpinfo")
        helpinfo
        ;;
    8 | "reboot")
        reboot
        ;;
    9 | "poweroff")
        poweroff
        ;;
    10)
        # Do nothing.
        ;;
    *)
        printf "This isn't a valid choice.\n"
esac

case "$CHOICE" in
    8 | 9 | "reboot" | "poweroff")
        ;;
    *)
        printf "menu: Type '\033[01;37mmenu\033[0m' to return to main menu.\n\n"
esac

exit 0
